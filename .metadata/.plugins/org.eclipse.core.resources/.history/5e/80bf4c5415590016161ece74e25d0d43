package kr.or.kosta;

import java.util.Calendar;

public class Company_Date {
//시스템 사용하는 날짜제공하는 함수
//날짜라는 함수는 사용빈도가 높다.
//static 함수
	public static String DateStirng(Calendar date){
		//2016년8월3일 형식을 return 함수
		Calendar today = Calendar.getInstance();
		String ru = today.get(Calendar.YEAR)+ "년" + ((today.get(Calendar.MONTH))+1) +"월"
				+ today.get(Calendar.DATE)+"일";
		return ru;
	}
