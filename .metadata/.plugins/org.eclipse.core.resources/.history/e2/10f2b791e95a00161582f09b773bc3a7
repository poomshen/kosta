package Quze;

class Fight extends Thread{
	static int dang =0;
	int Hp =0 ;
	
	public void gethp(int hp){
		this.Hp = hp;
	}
	
	public int damage(){
		int dag = 0;
		dag = (int) (Math.random()*3);
		return dag;
	}
	
	@Override
	public void run() {
		for(int i = 0; i<100 ; i++){
			dang = damage();
			System.out.println(dang+ "¶§¸²");
			
			try {
				Thread.sleep(500);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			Hp -= dang;
		}
	}
}

public class Game_2 {
	public static void main(String[] args) {
		int hp_py = 10;
		int hp_py2 = 30;
		
		Fight py = new Fight();
		py.gethp(hp_py2);
		py.start();
		
		
	}
}
