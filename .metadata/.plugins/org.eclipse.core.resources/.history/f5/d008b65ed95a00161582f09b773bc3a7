package Quze;
class tongue extends Thread{
	String tong = "";
	String name;
	public tongue(String name){
		this.name = name;
	}
	@Override
	public void run() {
		System.out.print(name);
		for(int i=0; i<10 ; i++){
			try {
				Thread.sleep(500);
				tong += "■";
				System.out.print(tong);
				System.out.println();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			}
		System.out.println(name+"완주 완료");
	}
}

class runing extends Thread{
	tongue ru = new tongue("1번:");
	tongue ru2 = new tongue("2번:");
	tongue ru3 = new tongue("3번:");
	tongue ru4 = new tongue("4번:");
	@Override
	public void run() {
		ru.start();
		ru2.start();
		ru3.start();
		ru4.start();
	}
}
public class Game {
	public static void main(String[] args) {
		runing ru = new runing();
		ru.start();
//		ru.stop();
	}
}
